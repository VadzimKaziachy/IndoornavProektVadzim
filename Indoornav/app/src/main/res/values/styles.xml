<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_900</item>
        <item name="colorPrimaryDark">@color/green_600</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="textColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textColor.textBold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_form">
        <item name="android:background">@drawable/button_form_normal</item>
    </style>
</resources>
